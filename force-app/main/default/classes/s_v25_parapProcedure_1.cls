public class s_v25_parapProcedure_1 {
    public static String createNewAccount(String acName,String acType,String acRating,String acPhone)
    {
        Account acc=new Account();
        acc.Name=acName;
        acc.Type=acType;
        acc.Rating=acRating;
        acc.Phone=acPhone;
        insert acc;
        return acc.Id;
        
        
    }
    
    public static void createNewContact(String acId,String fname,String lname,String cemail,String cphone)
    {
        Contact con=new Contact();
        con.FirstName=fname;
        con.LastName=lname;
        con.Email=cemail;
        con.Phone=cphone;
        con.AccountId=acId;
        insert con;
        
    }

}